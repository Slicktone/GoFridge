		<!-- Form -->
		<div class="row newAccount">
			<form action="userForm/add" class="col s12" id="submit-form" method="post" name="submit-form">
				<h5>Create an Account</h5>
				<div class="row">
					<div class="input-field col s6">
						<input class="validate" id="first_name" name="first_name" placeholder="John" type="text"> <label for="first_name"><font color="teal">First Name</font></label>
					</div>
					<div class="input-field col s6">
						<input class="validate" id="last_name" name="last_name" placeholder="Doe" type="text"> <label for="last_name"><font color="teal">Last Name</font></label>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s12">
						<input class="validate" id="email" name="email" placeholder="example@email.com" type="email"> <label for="email"><font color="teal">Email</font></label>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s12">
						<input class="validate" id="password" name="password" placeholder="Enter Password" type="password"> <label for="password"><font color="teal">Password</font></label>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s12">
						<input class="validate" id="myFridge-budget" name="budget" placeholder="$" type="number"> <label for="myFridge-budget"><font color="teal">Budget</font></label>
					</div>
				</div><button class="btn waves-effect waves-light" name="action" type="submit">Submit <i class="material-icons right">send</i></button>
			</form>
		</div>
	</div>

	<!-- Modal Structure -->
		<div class="modal" id="modal1">
