<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<div class="container">
		<!-- Nav Bar -->
		<nav>
			<div class="nav-wrapper">
				<a class="brand-logo" href="/">GoFridge</a>
				<ul class="right hide-on-med-and-down" id="nav-mobile">
					<li>
						<a href="/">Logout</a>
					</li>
					<li style="list-style: none">{{!--</li>
					<li>
						<a href="/userForm">Create Account</a>
					</li>
					<li style="list-style: none">--}}</li>
				</ul>
			</div>
		</nav>
		<div class="row myFridge-row">
			<div class="col s8">
				{{!--all the myfridge items--}} 
        {{#each myFridges}}
          <div class="myFridges">
            {{this.id}} {{this.category}} {{this.name}} {{this.price}} {{this.refill}}
          </div>
        {{/each}}
			</div>
			<div class="col s2">
				{{!--updating myFridge items--}} 
        {{#each myFridges}}
          <div>
            <form action="myFridge/update/{{this.id}}?_method=PUT" method="post">
              <input name="devoured" type="hidden" value="true"> <button class="update-button" type="submit">Update</button>
            </form>
          </div>
        {{/each}}
			</div>
			<div class="col s2">
				{{!--delete myFridge items--}} 
        {{#each myFridges}}
          <div>
            <form action="myFridge/update/{{this.id}}?_method=PUT" method="post">
              <input name="devoured" type="hidden" value="true"> <button class="update-button" type="submit">Update</button>
            </form>
          </div>
        {{/each}}
			</div>
		</div>
		<div class="row input-row">
			{{!--adding new myFridge items--}}
			<form action="member/add" class="col s12" id="submit-form" method="post" name="submit-form">
				<h5>Create a shopping item</h5>
				<div class="row">
					<div class="input-field col s6">
						<input class="validate" id="myFridge-category" name="category" placeholder="Produce, Snacks, etc..." type="text"> <label for="myFridge-category">Category</label>
					</div>
					<div class="input-field col s6">
						<input class="validate" id="myFridge-item" name="name" placeholder="Apples, Milk, etc..." type="text"> <label for="myFridge-item">Item Name</label>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s12">
						<input class="validate" id="myFridge-price" name="price" placeholder="$" type="text"> <label for="myFridge-price">Price</label>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s12">
						<input class="datepicker" id="refill-date" name="refill" placeholder="Date MM-DD-YYYY" type="date"> <label for="refill-date">When do you need to buy again?</label>
					</div>
				</div><button class="btn waves-effect waves-light" name="action" type="submit">Submit <i class="material-icons right">send</i></button>
			</form>
		</div>
	</div>
</body>
</html>