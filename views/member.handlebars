<!DOCTYPE html>
<html>

<head>
  <title></title>
</head>

<body>
  <div class="container">
    <!-- Nav Bar -->
  <nav>
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">GoFridge</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/">Login</a></li>
        <li><a href="/userForm">Create Account</a></li>
      </ul>
    </div>
  </nav>
  <div class="row myFridge-row">
    <div class="col s8">
      {{!--all the myfridge items--}}
      {{#each myFridges}}
        <div class="myFridges">
          {{this.id}}
          {{this.category}}
          {{this.name}}
          {{this.price}}
          {{this.refill}}
        </div>
      {{/each}}
    </div>
    <div class="col s2">
      {{!--updating myFridge items--}}
      {{#each myFridges}}
        <div>
				  <form action="myFridge/update/{{this.id}}?_method=PUT" method="post">
					  <input name="devoured" type="hidden" value="true"> <button class="update-button" type="submit">Update</button>
				  </form>
			  </div>
      {{/each}}
    </div>
    <div class="col s2">
      {{!--delete myFridge items--}}
      {{#each myFridges}}
        <div>
				  <form action="myFridge/update/{{this.id}}?_method=PUT" method="post">
					  <input name="devoured" type="hidden" value="true"> <button class="update-button" type="submit">Update</button>
				  </form>
			  </div>
      {{/each}}
    </div>
  </div>
  <div class="row input-row">
    {{!--adding new myFridge items--}}
        <form class="col s12" action="member/add" method="post">
            <h5>Create a shopping item</h5>
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="Produce, Snacks, etc..." id="myFridge-category" name="category" type="text" class="validate">
                    <label for="myFridge-category">Category</label>
                </div>
                <div class="input-field col s6">
                    <input placeholder="Apples, Milk, etc..." id="myFridge-item" name="name" type="text" class="validate">
                    <label for="myFridge-item">Item Name</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="$" id="myFridge-price" name="price" type="text" class="validate">
                    <label for="myFridge-price">Price</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Date MM-DD-YYYY" id="refill-date" name="refill" type="date" class="datepicker">
                    <label for="refill-date">When do you need to buy again?</label>
                </div>
            </div>
        </form>
    </div>
    <button class="btn waves-effect waves-light" type="submit"  name="action">Submit
    <i class="material-icons right">send</i>
  </button>
	</div>
  </div>

</body>

</html>